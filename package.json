{
  "babel": {
    "env": {
      "es": {
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ],
          "flow",
          "react",
          "stage-0"
        ]
      },
      "esnext": {
        "presets": [
          "es2016",
          "es2017",
          "flow",
          "react",
          "stage-0"
        ]
      },
      "node": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "6.0.0"
              }
            }
          ],
          "flow",
          "react",
          "stage-0"
        ]
      },
      "test": {
        "presets": [
          "env",
          "flow",
          "react",
          "stage-0"
        ]
      },
      "rollup": {
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ],
          "flow",
          "react",
          "stage-0"
        ]
      }
    }
  },
  "bolt": {
    "version": "^0.17.0",
    "workspaces": [
      "site",
      "packages/*"
    ],
    "releases": {
      "baseCommitUrl": "https://github.com/skatejs/skatejs/commits"
    }
  },
  "dependencies": {
    "@skatejs/renderer-lit-html": "^0.0.0",
    "@skatejs/renderer-preact": "^0.1.0",
    "@skatejs/renderer-react": "^0.0.0",
    "@skatejs/sk-router": "^0.1.0",
    "highlight.js": "^9.12.0",
    "lit-html": "^0.7.1",
    "preact": "^8.2.5",
    "prismjs": "^1.8.4",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "yocss": "^0.5.1"
  },
  "devDependencies": {
    "@skatejs/bore": "^4.0.0",
    "@skatejs/ssr": "^0.16.0",
    "@skatejs/val": "^0.3.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.1.0",
    "babel-plugin-modules-map": "1.0.0",
    "babel-plugin-modules-web-compat": "^1.1.1",
    "babel-plugin-transform-skate-flow-props": "^0.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "conartist": "^0.12.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "file-loader": "^1.1.5",
    "husky": "^0.13.3",
    "img-loader": "^2.0.0",
    "jest": "^20.0.4",
    "jest-cli": "^21.0.2",
    "lint-staged": "^4.0.2",
    "prettier": "1.8.2",
    "prettier-eslint": "^8.2.2",
    "raw-loader": "^0.5.1",
    "rollup": "^0.49.3",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-uglify": "^2.0.1",
    "typescript": "2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "worker-loader": "^1.1.0"
  },
  "name": "skatejs",
  "private": true,
  "scripts": {
    "build": "npm run build:es && npm run build:esnext && npm run build:node && npm run build:umd",
    "build:es": "BABEL_ENV=es bolt workspaces exec --only-fs packages/* -- babel src --out-dir es",
    "build:esnext": "BABEL_ENV=esnext bolt workspaces exec --only-fs packages/* -- babel src --out-dir esnext",
    "build:node": "BABEL_ENV=node bolt workspaces exec --only-fs packages/* -- babel src --out-dir node",
    "build:umd": "BABEL_ENV=rollup bolt workspaces exec --only-fs packages/* -- rollup -c && BABEL_ENV=rollup bolt workspaces exec --only-fs packages/* -- rollup -c --min",
    "test": "jest",
    "dev": "cd site && webpack-dev-server --hot",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "release": "npm publish && git push --follow-tags",
    "site": "cd site && webpack -p",
    "test:watch": "jest --watch",
    "test:ts": "bolt workspaces exec -- tsc --noEmit --project ./"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "./node_modules"
    ],
    "testEnvironment": "@skatejs/ssr/jest"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
